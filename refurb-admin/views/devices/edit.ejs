
<%- include('../partials/head',   { title: 'Edit Device', active: 'all' }) %>
<%- include('../partials/header', { active: 'all' }) %>


<h1 class="page-title">Edit Device #<%= d.id %></h1>

<form class="form" method="post" action="/devices/<%= d.id %>/status">
  <label><span>Status</span>
    <select class="select" name="status">
      <% ['pending','in_progress','done','resold'].forEach(s => { %>
        <option value="<%= s %>" <%= d.status===s?'selected':'' %>><%= s %></option>
      <% }) %>
    </select>
  </label>
  <button class="btn" type="submit">Update Status</button>
</form>

<form class="form" method="post" action="/devices/<%= d.id %>/grade">
  <label><span>Grade</span>
    <select class="select" name="grade">
      <option value="">â€”</option>
      <option value="A" <%= d.grade==='A'?'selected':'' %>>A</option>
      <option value="B" <%= d.grade==='B'?'selected':'' %>>B</option>
      <option value="C" <%= d.grade==='C'?'selected':'' %>>C</option>
    </select>
  </label>
  <button class="btn" type="submit">Save Grade</button>
</form>

<form class="form" method="post" action="/devices/<%= d.id %>/resell">
  <label><span>Price (if resold)</span>
    <input class="input" type="number" name="price" step="0.01" value="<%= d.price ?? '' %>" />
  </label>
  <button class="btn primary" type="submit">Resell</button>
</form>

<%- include('../partials/footer') %>
<%- include('../partials/end') %>


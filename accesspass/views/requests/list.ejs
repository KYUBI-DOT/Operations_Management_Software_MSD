<%- include('../partials/header') %>
<h1>Access Requests</h1>
<form class="filters" method="get" action="/requests">
  <input class="input" type="text" name="q" placeholder="Search name/email/system" value="<%= filter.q %>"/>
  <select class="select" name="status">
    <option value="">All</option>
    <% ['pending','approved','denied','revoked'].forEach(s => { %>
      <option value="<%= s %>" <%= filter.status===s?'selected':'' %>><%= s %></option>
    <% }) %>
  </select>
  <button class="btn primary" type="submit">Apply</button>
</form>
<div class="table-wrap">
<table class="table">
  <thead><tr><th>ID</th><th>Name</th><th>Email</th><th>System</th><th>Status</th><th>Actions</th></tr></thead>
  <tbody>
  <% rows.forEach(r => { %>
    <tr>
      <td><%= r.id %></td>
      <td><%= r.employee_name %></td>
      <td><%= r.email %></td>
      <td><%= r.system %></td>
      <td><%= r.status %></td>
      <td class="row-actions">
        <a href="/requests/<%= r.id %>/edit">Edit</a>
        <form method="post" action="/requests/<%= r.id %>/decide?pass=<%= process.env.ADMIN_PASS %>" style="display:inline">
          <input type="hidden" name="status" value="approved" /><button class="btn" type="submit">Approve</button>
        </form>
        <form method="post" action="/requests/<%= r.id %>/decide?pass=<%= process.env.ADMIN_PASS %>" style="display:inline">
          <input type="hidden" name="status" value="denied" /><button class="btn" type="submit">Deny</button>
        </form>
        <form method="post" action="/requests/<%= r.id %>/decide?pass=<%= process.env.ADMIN_PASS %>" style="display:inline">
          <input type="hidden" name="status" value="revoked" /><button class="btn" type="submit">Revoke</button>
        </form>
        <form method="post" action="/requests/<%= r.id %>/delete?pass=<%= process.env.ADMIN_PASS %>" style="display:inline" onsubmit="return confirm('Delete?')">
          <button class="btn ghost" type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
</div>
<%- include('../partials/footer') %>

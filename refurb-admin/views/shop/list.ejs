<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= title || 'Shop' %></title>

  <!-- Public site CSS -->
  <link rel="stylesheet" href="/home.css?v=<%= cacheBuster %>">
</head>
<body>
  <!-- public header -->
  <header class="home-header">
    <div class="logo">ðŸ›’ Refurb Shop</div>

    <nav class="nav">
      <a class="<%= (active==='home') ? 'active' : '' %>" href="/">Home</a>
      <a class="<%= (active==='shop') ? 'active' : '' %>" href="/shop">Shop</a>
        <a class="<%= active==='partner' ? 'active' : '' %>" href="/partner">Partner</a>
    </nav>

    <div class="nav-actions">
      <% if (!isAuthed) { %>
        <a class="btn-admin" href="/login">Admin</a>
      <% } else { %>
        <a class="btn-admin" href="/dashboard">Dashboard</a>
        <form method="post" action="/logout" style="display:inline">
          <button class="btn-admin btn-outline" type="submit">Logout</button>
        </form>
      <% } %>
    </div>
  </header>

  <!-- hero -->
  <main class="hero" style="padding-block:60px;">
    <h1>Devices Available for Purchase</h1>
    <p>Certified devices ready for sale. Grades reflect cosmetic/functional quality.</p>
  </main>

  <% const items = (typeof devices !== 'undefined' && Array.isArray(devices)) ? devices : []; %>

  <!-- product grid -->
  <section class="features" style="padding-top:30px;">
    <div class="cards" style="max-width:1100px;">
      <% items.forEach(it => { %>
        <div class="card">
          <h3><%= (it.brand ? it.brand + ' ' : '') + it.model %></h3>
          <p class="muted">Grade: <strong><%= it.grade %></strong></p>
          <p style="margin:.25rem 0 1rem;">
            <strong>$<%= (it.price != null ? Number(it.price) : 0).toFixed(0) %></strong>
          </p>
          <a class="cta" href="#">Add to cart</a>
        </div>
      <% }) %>

      <% if (items.length === 0) { %>
        <div class="card" style="grid-column:1/-1; text-align:center;">
          <h3>No devices available right now</h3>
          <p class="muted">Please check back soon â€” new stock is added regularly.</p>
        </div>
      <% } %>
    </div>
  </section>

  <footer class="footer">
    <p>Â© <%= new Date().getFullYear() %> Refurb Admin. All rights reserved.</p>
  </footer>
</body>
</html>
